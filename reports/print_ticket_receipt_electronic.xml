<!-- Patient -->
<div class="text-left" style="margin-top:10px;font-size: x-small;">
    <table style="width:100%">
        <tr>
            <td><b>Cliente:</b></td>
            <td><t t-esc="doc.partner_id.name"/></td> 
        </tr>

        <tr>
            <td><b>DNI:</b></td>
            <td><t t-esc="doc.x_id_doc"/></td> 
        </tr>

        <tr>
            <td><b>Direcci√≥n:</b></td>
            <td><t t-esc="doc.partner_id.x_address"/></td> 
        </tr>
    </table>
    <br/>
</div>




<!-- Date --> 
<!-- Serial Number --> 
<table style="width:100%">
    <tr>
        <td><b>Fecha:</b></td>
        <td><t t-esc="doc.x_date_order_corr"/></td> 
    </tr>
    <tr>
        <td><b>Ticket:</b></td>
        <td><t t-esc="doc.x_serial_nr"/></td> 
    </tr>
</table>
<br/>



<!-- Line --> 
<div class="col-xs-12" style="border-top: 1px solid black;"/>


<!-- Sale --> 
<table style="width:100%">
    <tr>
        <td><b>Desc</b></td>
        <td><b>Cnt</b></td>
        <td><b>PUnit</b></td>
        <td><b>Total</b></td>
    </tr>


<!-- Items --> 
<t t-foreach="doc.order_line" t-as="line">
<tr>

<td>
<t t-esc="line.product_id.x_name_ticket"/>
</td>

<td>
<t t-esc="line.x_qty"/>
</td>

<td>
<t t-esc="line.price_unit"/>
</td>

<td>
<t t-esc="line.price_subtotal"/>
</td>

</tr>
</t>
</table>



<!-- Line --> 
<div class="col-xs-12" style="border-top: 1px solid black;"/>






<!-- Total --> 
<table style="width:100%">
    <tr>
        <td><b>Neto S/.</b></td>
        <td align="right" ><t t-esc="doc.x_total_net"/></td> 
    </tr>

    <tr>
        <td><b>I.G.V. 18% S/.</b></td>
        <td align="right" ><t t-esc="doc.x_total_tax"/></td> 
    </tr>

    <tr>
        <td><b>Total S/.</b></td>
        <td align="right" ><t t-esc="doc.amount_total"/></td> 
    </tr>
</table>


<!-- Total In Words --> 
<table style="width:100%">
    <tr>
        <td><b>Son:</b></td>
    </tr>
    <tr>
        <td align="right" ><t t-esc="doc.x_total_in_words"/></td> 
    </tr>

    <tr>
        <td align="right" >Y <t t-esc="doc.x_total_cents"/>/100</td> 
    </tr>

    <tr>
        <td align="right" >Soles</td> 
    </tr>
</table>
<br/>






                </div>
            </t>
        </t>
    </t>
