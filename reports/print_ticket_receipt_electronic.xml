<openerp>
	<data>


<!-- Report --> 
<report

	id="print_ticket_receipt_electronic"
	
    model="sale.order"

    string="Ticket de Venta Electrónico"
	
    report_type="qweb-pdf"
	
    name="openhealth.report_ticket_receipt_electronic"
    
    paperformat="appointment_receipt_electronic"

    file="openhealth.report_ticket_receipt_electronic"
/>
<!--
    attachment_use="True"
    attachment="(object.state in ('open','paid')) and
        ('INV'+(object.number or '').replace('/','')+'.pdf')"
    paperformat="appointment_receipt"
-->




<!-- Template --> 
<template id="report_ticket_receipt_electronic">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc"> 
            <t t-call="openhealth.external_layout">
                <div class="page" style="margin-top:100px;font-size: small;">
<!--
                    <h2>BOLETA DE VENTA</h2>
                    <p>This object's name is <span t-field="o.name"/></p>
-->



<!-- Title -->
<div class="row">

    <div class="col-xs-12" style="border-top: 1px solid black;"/>

    <div class="col-xs-12 text-center" style="margin-top:5px;margin-bottom:5px;font-size: small;" t-field="doc.x_title"/>

    <div class="col-xs-12" style="border-top: 1px solid black;"/>

</div>




<!-- Date -->
<!--
<div class="row"    style="margin-top:10px;margin-bottom:10px;width:100%;font-size: x-small;">
    <div class="col-xs-6 text-left" style="margin-top:10px;" t-field="doc.x_date_order_corr"/>
    <div class="col-xs-6 text-right" style="margin-top:10px;" t-field="doc.x_serial_nr"/>
</div>
-->


<!-- Receptor -->
<div class="text-left" style="margin-top:10px;">
    <table style="width:100%">



<t t-if="doc.x_type == 'ticket_receipt'">
        <tr>
            <td><b>Cliente:</b></td>
            <td>
                <t t-esc="doc.patient.name"/>            
            </td> 
        </tr>

        <tr>
            <td><b>DNI:</b></td>
            <td>
                <t t-esc="doc.x_id_doc"/>
            </td> 
        </tr>
</t>


<t t-if="doc.x_type == 'ticket_invoice'">
        <tr>
            <td><b>Razón social:</b></td>
            <td>
                <t t-esc="doc.patient.x_firm"/>            
            </td> 
        </tr>

        <tr>
            <td><b>RUC:</b></td>
            <td>
                <t t-esc="doc.x_ruc"/>
            </td> 
        </tr>
</t>


        <tr>
            <td><b>Dirección:</b></td>
            <td><t t-esc="doc.partner_id.x_address"/></td> 
        </tr>

    </table>
    <br/>
</div>



<!--
<div class="text-left" style="margin-top:10px;">
    <table style="width:100%">
    </table>
    <br/>
</div>
-->



<!-- Date --> 
<!-- Serial Number --> 
<table style="width:100%">
    <tr>
        <td><b>Fecha:</b></td>
        <td><t t-esc="doc.x_date_order_corr"/></td> 
    </tr>
    <tr>
        <td><b>Ticket:</b></td>
        <td><t t-esc="doc.x_serial_nr"/></td> 
    </tr>
</table>
<br/>



<!-- Line --> 
<div class="col-xs-12" style="border-top: 1px solid black;"/>


<!-- Sale --> 
<table style="width:100%">
    <tr>
        <td><b>Desc</b></td>
        <td><b>Cnt</b></td>
        <td><b>PUnit</b></td>
        <td><b>Total</b></td>
    </tr>


<!-- Items --> 
<t t-foreach="doc.order_line" t-as="line">
<tr>

<td>
<t t-esc="line.product_id.x_name_ticket"/>
</td>

<td>
<t t-esc="line.x_qty"/>
</td>

<td>
<t t-esc="line.price_unit"/>
</td>

<td>
<t t-esc="line.price_subtotal"/>
</td>

</tr>
</t>
</table>



<!-- Line --> 
<div class="col-xs-12" style="border-top: 1px solid black;"/>






<!-- Total --> 
<table style="width:100%">
    
    <tr>
        <td>OP. GRAVADAS S/.</td>
        <td align="right" ><t t-esc="doc.x_total_net"/></td> 
    </tr>

    <tr>
        <td>OP. GRATUITAS S/.</td>
        <td align="right" >0.00</td> 
    </tr>

    <tr>
        <td>OP. EXONERADAS S/.</td>
        <td align="right" >0.00</td> 
    </tr>

    <tr>
        <td>OP. INAFECTAS S/.</td>
        <td align="right" >0.00</td> 
    </tr>




    <tr>
        <td>I.G.V. 18% S/.</td>
        <td align="right" ><t t-esc="doc.x_total_tax"/></td> 
    </tr>

    <tr>
        <td>TOTAL S/.</td>
        <td align="right" ><t t-esc="doc.amount_total"/></td> 
    </tr>
</table>
<br/>





<!-- Total In Words --> 
<table style="width:100%">
    <tr>
        <td><b>Son:</b></td>
    </tr>
    <tr>
        <td align="right" ><t t-esc="doc.x_total_in_words"/></td> 
    </tr>

    <tr>
        <td align="right" >Y <t t-esc="doc.x_total_cents"/>/100</td> 
    </tr>

    <tr>
        <td align="right" >Soles</td> 
    </tr>
</table>
<br/>


<!-- QR --> 
<!--
<div class="col-xs-12">
-->
<div class="text-center col-xs-12" style="border-top: 1px solid black; margin-top: 5px;">
<!--
    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>

    <img t-if="doc.x_qr_img" t-att-src="'data:image/png;base64,%s' % sale.qr" style="max-height: 45px;"/>
    <img t-if="doc.x_qr_img"  style="max-height: 45px;"/>


    <span t-field="o.product_id.image_medium" t-field-options="{'widget': 'image'}"/>
    <span t-field="doc.x_qr_img" t-field-options="{'widget': 'image'}"/>

    <img t-att-src="'data:image/png;base64,%s' % to_text(product_id.image_medium)"/>
    <img t-att-src="'data:image/png;base64,%s' % to_text(doc.x_qr_img)"/>
-->

    <img t-att-src="'data:image/png;base64,%s' % doc.x_qr_img"  style="max-height: 100px;"/>

</div>




<!-- Footer --> 
<div class="footer_">

    <div class="text-center" style="margin-top:1px;margin-bottom:1px;width:100%;font-size: xx-small;">
<!--
        <div class="col-xs-12 text-center" style="margin-top:7px;" t-field="doc.x_my_company.sale_note"/>
-->

        <div class="col-xs-12 text-center" style="margin-top:7px;" t-field="doc.x_my_company.x_warning"/>

        <div class="col-xs-12 text-center" style="margin-top:7px;" t-field="doc.x_my_company.website"/>

        <div class="col-xs-12 text-center" style="margin-top:7px;" t-field="doc.x_my_company.email"/>

    </div>

</div>      




                </div>
            </t>
        </t>
    </t>
</template>




	</data>
</openerp>