<openerp>
	<data>




<!-- Orden de C/S -->
		<report

			string="Orden de C/S"

			model="purchase.order"
			
			id="report_purchasequotation"
			
			report_type="qweb-pdf"
			
			name="openhealth.report_purchasequotation"            
			
			file="openhealth_rfq.report_purchasequotation"
		/>



		<template id="openhealth.report_purchasequotation">
			
			<t t-call="report.html_container">                 
			<t t-foreach="docs" t-as="doc">
			<t>

		<div class="page">



<!-- Title --> 
<!--
<br/>
<center>
<h3>
	Orden de C/S
</h3>
</center>
<br/>
-->


			<div class="oe_structure"/>

			<div class="row mt32 mb32">

				<div class="col-xs-6">



					<strong>Enviar a:</strong>

					<div t-if="doc.dest_address_id">

						<div 

							t-field="doc.dest_address_id" 

							t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: true, &quot;phone_icons&quot;: true}"
						/>
					
					</div>

				</div>



				<div class="col-xs-5 col-xs-offset-1">


					<strong>Proveedor:</strong>

					<div 
						t-field="doc.partner_id" 
						t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: true, &quot;phone_icons&quot;: true}"
					/>
<!--
					<p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
-->
				</div>
			</div>
<br/>
<br/>

<br/>





			<h2>Orden de C/S: <span t-field="doc.name"/></h2>
<br/>
<br/>


			<table class="table table-condensed">

				<thead>
					<tr>
						<th><strong>Descripci√≥n</strong></th>

						<th class="text-center"><strong>Fecha prevista</strong></th>
						
						<th class="text-right"><strong>Cantidad</strong></th>
					</tr>
				</thead>


				<tbody>

					<tr t-foreach="doc.order_line" t-as="order_line">

						<td>
							<span t-field="order_line.name"/>
						</td>
						

						<td class="text-center">
							<span t-field="order_line.date_planned"/>
						</td>
						
						<td class="text-right">
						
							<span t-field="order_line.product_qty"/>
						
							<span t-field="order_line.product_uom" groups="product.group_uom"/>
						</td>
					</tr>
				</tbody>
			</table>





		</div>
			</t>
			</t>
			</t>
		</template>

	</data>
</openerp>