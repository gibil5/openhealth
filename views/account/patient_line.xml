                    <field name="budget_prod"/>

                    <field name="budget_amount"/>

                    <field name="budget_flag"/>

                    <field name="nr_budget"/>




                    <field name="nr_reco"/>                     

                    <field name="nr_sale"/>

                    <field name="nr_consu"/>                        

                    <field name="nr_products"/>

                    <field name="nr_proc"/>                     





