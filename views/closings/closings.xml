<?xml version="1.0"?>
<openerp>
    <data>
        


        <!-- FORM --> 
        <record model="ir.ui.view" id="closing_form_view">
            <field name="name">closing.form</field>
            <field name="model">openhealth.closing</field>
            <field name="arch" type="xml">
                <form string="Clsing Form">
                    
                    <!-- Header -->
                    <header>

                        <button 
                                type="object" 
                                class="oe_highlight"
                                name="update"
                                string="Actualizar"
                        />


                        <button 
                                type="object" 

                                class="oe_highlight"

                                name="print_closing"

                                string="Imprimir"
                        />

<!--
                        <button 
                                type="object" 
                                class="oe_highlight oe_right"

                                name="update_month_all"

                                string="Update month All"

                                groups="openhealth.roots"
                        />
                        <button 
                                type="object" 
                                class="oe_highlight oe_right"

                                name="update_month"

                                string="Update month"

                                groups="openhealth.roots"
                        />
-->

                        <!-- Test -->
                        <button 
                                type="object" 
                                class="oe_highlight oe_right"

                                name="test"

                                string="Test"

                                groups="openhealth.roots"
                        />


                        <!-- Reset -->
                        <button 
                                type="object" 
                                class="oe_highlight oe_right"

                                name="reset"

                                string="Reset"

                                groups="openhealth.roots"
                        />


                        <!-- Clean -->
                        <button 
                                type="object" 
                                class="oe_highlight oe_right"

                                name="clean"

                                string="Clean"

                                groups="openhealth.roots"
                        />

                    </header>



<!-- Sheet -->  
                    <sheet>


                        <!-- Base -->
                        <group  string="Total">
                            <group>
                                <field name="name"/>
                                <field name="date"/>

                                <field name="month" groups='openhealth.roots'/>
                                <field name="year"  groups='openhealth.roots'/>
                            </group>
                            <group>
                                <field name="total"/>
                                <field name="total_cash"/>
                                <field name="total_cards"/>
                            </group>
                        </group>





                        <!-- Proof -->
                        <group  string="Documentos de pago"     col="2"         >

                            <group>

                                <field name="crn_tot"/>
                                <field name="serial_nr_first_crn"       />
                                <field name="serial_nr_last_crn"        />

                                <field name="vspace"/>

                                <field name="tkr_tot"/>
                                <field name="serial_nr_first_tkr"       />
                                <field name="serial_nr_last_tkr"        />
                                
                                <field name="vspace"/>
                                
                                <field name="tki_tot"/>
                                <field name="serial_nr_first_tki"       />
                                <field name="serial_nr_last_tki"        />
                                
                                <field name="vspace"/>
                                
                                <field name="rec_tot"/>
                                <field name="serial_nr_first_rec"       />
                                <field name="serial_nr_last_rec"        />
                                
                                <field name="vspace"/>
                                
                                <field name="inv_tot"/>
                                <field name="serial_nr_first_inv"       />
                                <field name="serial_nr_last_inv"        />
                                
                                <field name="vspace"/>
                                <field name="adv_tot"/>
                                <field name="serial_nr_first_adv"       />
                                <field name="serial_nr_last_adv"        />
                                
                                <field name="vspace"/>
                                
                                <field name="san_tot"/>
                                <field name="serial_nr_first_san"       />
                                <field name="serial_nr_last_san"        />
                                <field name="vspace"/>
                            </group>

                            <group>
                                <field name="total_proof"/>
                            </group>
                        </group>



                        <!-- Form -->
                        <group  string="Formas de pago" >
                            <group>
                                <field name="cash_tot"/>
                                <field name="ame_tot"/>
                                <field name="din_tot"/>
                                <field name="mac_tot"/>
                                <field name="mad_tot"/>
                                <field name="vic_tot"/>
                                <field name="vid_tot"/>
                            </group>
                            <group>
                                <field name="total_form"/>
                            </group>
                        </group>



                        <!-- Notebook -->
                        <notebook>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>





        
        <!-- TREE view --> 
        <record model="ir.ui.view" id="closing_view_order_tree">
            <field name="name">openhealth.closing.tree</field>
            <field name="model">openhealth.closing</field>
            <field name="arch" type="xml">


                <tree string="Cierres de caja"  default_order='date desc'>
                    
                    <field name="name"/>
                    <field name="month"/>
                    <field name="year"/>


                    <field name="total_cash"/>
                    <field name="total_cards"/>
                    <field name="total"/>

<!--
                    <field name="test_target"  groups="openhealth.roots"/>

                    <field name="date"      string="Fecha"  />

                    <field name="total_form"/>
                    <field name="total_proof"/>
                    <field name="ame_tot"/>
                    <field name="cuo_tot"/>
                    <field name="din_tot"/>
                    <field name="mac_tot"/>
                    <field name="mad_tot"/>
                    <field name="vic_tot"/>
                    <field name="vid_tot"/>
                    <field name="tkr_tot"/>
                    <field name="tki_tot"/>
                    <field name="rec_tot"/>
                    <field name="inv_tot"/>
                    <field name="adv_tot"/>
                    <field name="san_tot"/>

                    <field name="order_ids"/>
-->

                </tree>
            </field>
        </record>






<!-- ACTION -->
        <record model="ir.actions.act_window" id="closings_list_action">
            <field name="name">Cierres de Caja</field>
            <field name="res_model">openhealth.closing</field>
            <field name="view_type">form</field>

            <field name="view_mode">tree,form,graph,pivot</field>
            
            <!--
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first order
                </p>
            </field>
            -->
        </record>
        



<!-- Graph --> 
        <record id="view_closing_graph" model="ir.ui.view">
             <field name="name">closing.graph</field>
             <field name="model">openhealth.closing</field>
             <field name="arch" type="xml">

                 <graph string="AnÃ¡lisis de Cierres de Caja">

<!--
                    <field name="date" type="row"/>
                    <field name="date" interval="day" type="col"    />
                     <field name="total_cash" type="measure"/>                 
                     <field name="total_cards" type="measure"/>
-->             
                    
                    <!-- Row --> 
                    <field name="date" interval="day" type="row"    />
                    
                     
                     <!-- Measures --> 
                     <field name="total" type="measure"/>
                 </graph>
             </field>
        </record>

    </data>
</openerp>
