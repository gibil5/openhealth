<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>



<!-- FORM --> 
		<record model="ir.ui.view" id="container_form_view">
			<field name="name">container.form</field>
			<field name="model">openhealth.container</field>

			<field name="priority" eval="1"/>

			<field name="arch" type="xml">
				<form string="container Form">
					<header>


								<!-- Test - Init --> 
								<button 
									type="object" 
									class="oe_highlight"
									
									name="init_patients" 
									
									string="Init Pat" 								
								/>
							

								<!-- Test - Pat --> 
								<button 
									type="object" 
									class="oe_highlight"
									
									name="test_patients" 
									
									string="Test Pat" 								
								/>




								<!-- Test - Export --> 
								<button 
									type="object" 
									class="oe_highlight"
									
									name="test_export" 
									
									string="Export" 								
								/>




								<!-- Clear --> 
								<button 
									type="object" 
									class="oe_highlight oe_right"
									
									name="remove_patients" 
									
									string="Clear" 								
								/>
					</header>



					<!-- Sheet -->	
					<sheet>

						<group>
							<group>								
								<field name="name" />
							</group>
							<group>								
<!--
								<field name="patient" />
								<field name="partner" />
								<field name="treatment" />
-->
								<field name="doctor" />

							</group>
						</group>

						<group>
							<group>
								
								<field name="export_date_begin" />
								<field name="export_date_end" />

								<field name="export_date" />
							</group>
							<group></group>
						</group>




						<!-- Padding -->
						<group>
							<group></group>
							<group></group>
						</group>


						<!-- Notebook --> 
						<notebook>
							
							<page string="Patients">

								<field name="patient_ids" />

							</page>

						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<!-- FORM --> 




<!-- TREE --> 
		<record model="ir.ui.view" id="container_tree_view">
			<field name="name">container.tree</field>
			<field name="model">openhealth.container</field>
			<field name="arch" type="xml">

				<tree string="Container Tree">

					<field name="name"/>

					<field name="patient_ids"/>

				</tree>

			</field>
		</record>






<!-- ACTION -->
		<record model="ir.actions.act_window" id="container_list_action">
			<field name="name">Containers</field>
			<field name="res_model">openhealth.container</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
            <field name="context">{}</field>            

			<field name="domain">[]</field>

			<field name="limit">20</field>

            <field name="view_id" eval="False"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first container
				</p>
			</field>
		</record>


	</data>
</openerp>
