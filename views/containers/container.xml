<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>



<!-- FORM --> 
        <record model="ir.ui.view" id="container_form_view">
            <field name="name">container.form</field>
            <field name="model">openhealth.container</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="container Form">
                    <header>


<!--
                            string="Crear ElectrÃ³nico"                              
-->
                        <!-- Create Electronic --> 
                        <button 
                            type="object" 
                            class="oe_highlight"
                            name="create_electronic" 
                            
                            string="FacturaciÃ³n"                                
                        />


                        <!-- Export Txt --> 
                        <button 
                            type="object" 
                            class="oe_highlight"
                            name="export_txt" 
                            
                            string="Crear TXT"                              
                        />


                        <!-- Clear --> 
                        <button 
                            type="object" 
                            class="oe_highlight oe_right"
                            name="clear"

                            string="Clear"

                            groups="openhealth.roots"
                        />

                    </header>




                    <!-- Sheet -->  
                    <sheet>

                        <group>
                            <group>                             
                                <field name="name"/>
                                <field name="export_date_begin"/>
                                <field name="txt_pack"      filename="txt_pack_name"/>
                            </group>
                            <group>
                                <field name="amount_total"/>
                                <field name="receipt_count"/>
                                <field name="invoice_count"/>
                            </group>
                        </group>



                        <group groups="openhealth.roots">
                            <group>                             
                                <field name="ticket_receipt_create"/>
                                <field name="ticket_invoice_create"/>
<!--
                                <field name="ticket_receipt_cancel"/>
                                <field name="ticket_invoice_cancel"/>
-->
                            </group>                             

                            <group>                             
                                <field name="receipt_create"/>
                                <field name="invoice_create"/>
                                <field name="sale_note_create"/>
                                <field name="advertisement_create"/>

                                <field name="mgt"   groups="openhealth.roots"/>
                            </group>
                        </group>


<!--
                                <field name="gentextfile" filename="name"/>

                                <field name="mgt"   groups="openhealth.roots"/>
                                <field name="doctor"    groups="openhealth.roots"/>

                                <field name="patient" />
                                <field name="partner" />
                                <field name="treatment" />
                                <field name="doctor" />
                                <field name="export_date_end"/>
                                <field name="export_date"/>
-->




                        <!-- Padding -->
                        <group>
                            <group></group>
                            <group></group>
                        </group>


                        <!-- Notebook --> 
                        <notebook>
                            
                            <page string="Facturacion">
                                <field name="electronic_order_ids"/>
                            </page>

                            <page string="TXT">
                                <field name="txt_ids"/> 
                            </page>


<!--
                            <page string="Patients">
                                <field name="patient_ids"/>
                            </page>

                            <page string="MSSOFT">
                                <field name="txt_ref_ids"/>
                            </page>

-->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- FORM --> 






<!-- TREE --> 
        <record model="ir.ui.view" id="container_tree_view">
            <field name="name">container.tree</field>
            <field name="model">openhealth.container</field>
            <field name="arch" type="xml">

                <tree string="Container Tree">

                    <field name="name"/>

                    <field name="txt_pack"/>
<!--
                    <field name="patient_ids"/>
-->
                </tree>

            </field>
        </record>






<!-- ACTION -->
        <record model="ir.actions.act_window" id="container_list_action">
            <field name="name">Containers</field>
            <field name="res_model">openhealth.container</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>            

            <field name="domain">[]</field>

            <field name="limit">20</field>

            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first container
                </p>
            </field>
        </record>


    </data>
</openerp>
