<?xml version="1.0"?>
<openerp>
	<data>



<!-- TREE --> 
		<record model="ir.ui.view" id="filesystem_file_tree_view">

			<field name="name">filesystem.file.tree</field>
			
			<field name="model">ir.filesystem.file</field>
			
			<field name="arch" type="xml">

				<tree string="File Tree">

					<field name="name"/>

                	<field name="create_date"/>

                	<field name="write_date"/>


				</tree>
			</field>
		</record>





<!-- ACTION -->
		<record model="ir.actions.act_window" id="filesystem_file_list_action">

			<field name="name">Files</field>
			
			<field name="res_model">ir.filesystem.file</field>
			
			<field name="view_type">form</field>
			
			<field name="view_mode">tree,form</field>
            
            <field name="context">{}</field>            

			<field name="domain">[]</field>

			<field name="limit">100</field>

            <field name="view_id" eval="False"/>

			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first file
				</p>
			</field>
		</record>




	</data>
</openerp>