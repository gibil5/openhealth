<?xml version="1.0"?>
<openerp>
    <data>




<!-- FORM --> 
        <record model="ir.ui.view" id="management_day_doctor_line_form_view">
            <field name="name">openhealth.management.day.doctor.line.form</field>

            <field name="model">openhealth.management.day.doctor.line</field>


            <field name="arch" type="xml">
                <form string="Management Form">


                    <!-- Header -->
                    <header>
                    	
                        <!-- Update -->
                        <button 
                                type="object" 
                                class="oe_highlight"
                                
                                name="update_macro"
                                
                                string="Actualizar"                             
                        />


                    </header>


                    <!-- Sheet -->  
                    <sheet>

                        <group>
                            <group>
                                <field name="doctor_id"		string="Doctor"	/>
                                <field name="date"/>
                                <field name="weekday"/>
                                <field name="duration"/>
                            </group>
                            <group>                            	
                                <field name="amount"/>
                                <field name="nr_consultations"/>
                                <field name="nr_procedures"/>
                                <field name="ratio_pro_con"			widget="percentage"/>
                            </group>
                        </group>


                        <!-- Notebook --> 
                        <notebook>

                            <!-- Sales --> 
                            <page   string="Ventas">

                                <field name="order_line">
                                
                                    <tree string="Order Lines">


<!--
                    <field name="date_order_date"   widget="date"/>
                    <field name="receptor"/>
                    <field name="state"/>
                    <field name="id_doc_type"/>
                    <field name="id_doc_type_code"/>
                    <field name="id_doc"/>
                    <field name="ruc"/>
                    <field name="x_type"/>
                    <field name="type_code"/>
                    <field name="serial_nr"/>
                    <field name="sub_family"/>
-->

                    <field name="doctor"/>


                    <field name="x_date_created"/>


                    <field name="patient"/>

                    <field name="product_id"/>
                    <field name="family"/>

                    <field name="product_uom_qty"/>
                    <field name="price_total"    sum="Monto Total"         widget="monetary"       string="Monto"/>
                                    </tree>

                                </field>
                            </page>


                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>




<!-- TREE --> 
        <record model="ir.ui.view" id="management_day_doctor_line_view_tree">
            <field name="name">openhealth.management.day.doctor.line.tree</field>
            
            <field name="model">openhealth.management.day.doctor.line</field>
            
            <field name="arch" type="xml">
                <tree string="management day Doctor line Tree">


<!--
                    <field name="name"/>
-->

                    <field name="doctor_id"/>

                    <field name="date"/>

                    <field name="weekday"/>

                    <field name="duration"/>

                    <field name="amount"/>

                    <field name="nr_consultations"/>

                    <field name="nr_procedures"/>

                    <field name="ratio_pro_con"         widget="percentage"/>

                    <field name="management_id"     string="Mes"/>

                </tree>
            </field>
        </record>




    </data>
</openerp>
