<?xml version="1.0"?>
<openerp>
    <data>



<!-- TREE --> 
        <record model="ir.ui.view" id="management_sub_family_line_view_tree">
            <field name="name">openhealth.management.sub_family.line.tree</field>            
            
            <field name="model">openhealth.management.sub_family.line</field>
            
            <field name="arch" type="xml">

                <tree string="management sub_family line Tree">

                    <field name="name_sp"/>
                    <field name="meta_sp"/>

                    <field name="x_count"/>
                    <field name="per_nr"    widget="percentage"/>

                    <field name="amount"/>
                    <field name="per_amo"   widget="percentage"/>
                </tree>
            </field>
        </record>
<!--
                    <field name="name"/>
                    <field name="meta"/>
                    <field name="doctor_id"/>
                    <field name="management_id"/>
                    <field name="idx"/>
-->





        <!-- ACTION - sub_family -->
        <record model="ir.actions.act_window" id="management_sub_family_line_form_action">  
            <field name="name">Sub Familias</field>

            <field name="res_model">openhealth.management.sub_family.line</field>
            
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="limit">1000</field>
            <!--
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first sub_family
                </p>
            </field>
            -->
        </record>



        <!-- Filter --> 
        <record id="view_management_sub_family_line_filter" model="ir.ui.view">
            <field name="name">Treatment Search</field>

            <field name="model">openhealth.management.sub_family.line</field>
            
            <field name="arch" type="xml">
               <search string="Ventas">
                    <field  name="management_id"/>
                    <group expand="1" string="Group By">
                        <filter name="Familia" context="{'group_by':'meta_sp'}"/>
                    </group>
               </search>
           </field>
       </record>


    </data>
</openerp>
