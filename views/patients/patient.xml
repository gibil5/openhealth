								<field name="property_product_pricelist" 	/>


								<field name="x_vip" 	invisible="1"		/>

								
								<field name="x_card" 	/>
							</group>
						</group>
						
						
						
						<group>
							<group>

								<field string='Fecha de nacimiento'  name="dob" 	required="1" />
							
								<field name="x_nationality" 	/>
							</group>
							<group>
								
<!--
								<field name="x_datetime_created"  	readonly="0"	required="0"	/>
