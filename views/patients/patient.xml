							class="oe_highlight oe_right"

							name="deactivate_patient" 

							string="Desactivar" 
						/>

						<!-- Activate --> 
						<button 
							type="object" 
							class="oe_highlight oe_right"

							name="activate_patient" 

							string="Activar" 

							groups="openhealth.roots"
						/>



