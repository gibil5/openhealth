<!-- TREE 2 -->
		<record model="ir.ui.view" id="product_template_pl_tree_view">
			<field name="name">product.template.pl.tree</field>
			<field name="model">product.template</field>
			<field name="type">tree</field>
			<field name="priority" eval="2"/>
