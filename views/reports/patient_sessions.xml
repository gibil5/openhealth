<openerp>
	<data>

<report
	string="HC - Sesiones"

	id="report_patient_sessions"

	model="oeh.medical.patient"
	report_type="qweb-pdf"
	name="openhealth.report_patient_sessions_view"            
	file="oeh_medical_patient.report_patient"
	/>

<template id="openhealth.report_patient_sessions_view">
	<t t-call="report.html_container">                 
	<t t-foreach="docs" t-as="doc">
	<t>          



<!-- Header --> 
<div class="header">    
	<img src='/openhealth/static/src/img/logo_chavarri.png' style="max-height: 100px;"/>
</div>




<!-- 									Page 3 - Begin 										-->
<div class="page"     style="line-height: 200%;"     >    






<!--
<center>
<h1>
	Sesiones 
</h1>
</center>
<br/>
<br/>
-->


<!-- Treatments - Sessions --> 
<t t-foreach="doc.treatment_ids" t-as="t">
<t t-foreach="t.session_ids" t-as="e">



<!-- Evaluation nr --> 
<center>
<h2> 
	Sesión #:
	<t t-esc="e.evaluation_nr"/>
</h2>
</center>
<br/>
<br/>


<!--
<div class='row'>
<div class='col-xs-4'>
</div>
<div class='col-xs-8'></div>
</div>
-->



<!-- Date --> 
<div class='row'>
<div class='col-xs-8'></div>
<div class='col-xs-4'>
<b>
	Fecha:
</b>
	<t t-esc="e.evaluation_start_date"/>
</div>
</div>
<br/>
<br/>



<!-- Power --> 
<div class='row'>
<div class='col-xs-4'>
<b>
	Potencia (W):	
</b>
</div>
<div class='col-xs-8'>
	<t t-esc="e.co2_power"/>
</div>
</div>
<br/>






<!-- Frequency --> 
<div class='row'>
<div class='col-xs-4'>	
<b>
Frecuencia (Hz):
</b>
</div>
<div class='col-xs-8'>
<t t-esc="e.co2_frequency"/>
</div>
</div>
<br/>



<!-- Energy --> 
<div class='row'>
<div class='col-xs-4'>
<b>

Energía de pulso (mJ):
</b>
</div>
<div class='col-xs-8'>

<t t-esc="e.co2_energy"/>
</div>
</div>
<br/>




<!-- Mode emission --> 
<div class='row'>
<div class='col-xs-4'>
<b>
	Modo de emisión:
</b>
</div>
<div class='col-xs-8'>
<t t-esc="e._dic[e.co2_mode_emission]"/>
</div>
</div>
<br/>



<!-- Mode exposure --> 
<div class='row'>
<div class='col-xs-4'>
<b>
Modo de exposición:
</b>
</div>
<div class='col-xs-8'>
<t t-esc="e._dic[e.co2_mode_exposure]"/>
</div>
</div>
<br/>




<!-- Observations --> 
<div class='row'>
<div class='col-xs-4'>
<b>
Observaciones:
</b>
</div>
<div class='col-xs-8'>
<t t-esc="e.co2_observations"/>
</div>
</div>
<br/>


<p style="page-break-after:always;"></p>




</t>
</t>



</div>
<!--  									End 												-->



<!-- Footer --> 
<!--
-->
<div class="footer">    

<t t-foreach="doc.treatment_ids" t-as="t">

<div class='row'>
<div class='col-xs-4'>
<b>
Apellidos y Nombres:
</b>
<t t-esc="t.patient.name"/>
</div>

<div class='col-xs-5'>
</div>
<div class='col-xs-3'>
<b>
Historia #:
</b>
<t t-esc="t.patient.identification_code"/>
</div>
</div>
</t>

</div>
<!-- Footer --> 






	</t>
	</t>
	</t>
</template>

	</data>
</openerp>
