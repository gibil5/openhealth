<?xml version="1.0"?>
<openerp>
	<data>
		



<!-- FORM view --> 
		<record model="ir.ui.view" id="report_sale_form_view">

			<field name="name">report.sale.form</field>
			
			<field name="model">openhealth.report.sale</field>
			
			<field name="arch" type="xml">
				
				<form string="report_sale Form">
					



					<header>
						<button 
								type="object" 
								class="oe_highlight"

								name="update_report"

								string="Actualizar"
						/>
					</header>




					<!-- Sheet -->	
					<sheet>


					<group	string="Ventas"	>
						<group>


		                    <field name="name"/>

<!--
		                    <field name="date"/>
-->
		                    <field name="date_begin"/>
		                    <field name="date_end"/>


						</group>
						<group>
		                    <field name="total_qty"/>

		                    <field name="total"/>
						</group>
					</group>




<!-- Filter --> 
						<notebook>

							<page	string="Filtro"	>
								<group>
									<group>
<!--
										<field name="categ"		/>
-->
										<field name="categ_a"		/>
									</group>
									
									<group>
										<field name="categ_b"		/>
									</group>
								</group>

								
								<group>
									<group>

										<field name="doctor"		/>

									</group>
									<group>


									</group>
								</group>
							</page>

						</notebook>






<!-- Sales --> 
						<notebook>

							<page	string="Ventas - A"		>
								<field name="order_line_a_ids"		>
									<tree string=""		default_order="create_date"	>	
										<field name="product_id"		/>

<!--
										<field name="patient"		/>
										<field name="doctor"		/>
-->

										<field name="price_unit"		/>
										<field name="product_uom_qty"		/>
										<field name="price_subtotal"		/>

										<field name="x_date_created"	string="Fecha"	/>
									</tree>
								</field>
							</page>

							<page	string="B"		>
								<field name="order_line_b_ids"		>
									<tree string=""		default_order="create_date"	>	
										<field name="product_id"		/>

<!--
										<field name="patient"		/>
										<field name="doctor"		/>
-->

										<field name="price_unit"		/>
										<field name="product_uom_qty"		/>
										<field name="price_subtotal"		/>
										
										<field name="x_date_created"	string="Fecha"	/>
									</tree>
								</field>
							</page>
						</notebook>



<!-- Items -->
						<notebook>

							<page	string="Pacientes - A"	>
								<field name="item_counter_a_ids"		>
									<tree string=""		default_order="create_date"	>	
						
										<field name="name"		/>

										<field name="qty"		/>

										<field name="total"		/>

										<field name="categ"		/>
									</tree>
								</field>
							</page>
						

							<page	string="B"	>
								<field name="item_counter_b_ids"		>
									<tree string=""		default_order="create_date"	>	
						
										<field name="name"		/>

										<field name="qty"		/>

										<field name="total"		/>

										<field name="categ"		/>
									</tree>
								</field>
							</page>




							<page	string="A - B"	>

								<field name="item_counter_c_ids"		>
									<tree string=""		default_order="create_date"	>	
						
										<field name="name"		/>

										<field name="qty"		/>

										<field name="total"		/>

										<field name="categ"		/>
									</tree>
								</field>

							</page>
						</notebook>




		                    <field name="vspace"/>











					</sheet>
				</form>
			</field>
		</record>





		
<!-- TREE view --> 
		
		<record model="ir.ui.view" id="report_sale_tree">

			<field name="name">openhealth.report.sale.tree</field>
			
			<field name="model">openhealth.report.sale</field>
			
			<field name="arch" type="xml">
<!--
				<tree string="Closing Tree">
-->
				<tree default_order='name desc'>
					


                    <field name="name"	 				/>
<!--
                    <field name="date"/>
-->
                    <field name="total_qty"/>
                    <field name="total"/>


				</tree>
			</field>
		</record>






<!-- ACTION -->
		<record model="ir.actions.act_window" id="report_sale_list_action">
			<field name="name">Report de Ventas</field>
			
			<field name="res_model">openhealth.report.sale</field>

			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			
			<!--
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first order
				</p>
			</field>
			-->
		</record>
		

	</data>
</openerp>
