<?xml version="1.0"?>
<openerp>
	<data>


		<!-- Form --> 
		<record model="ir.ui.view" id="service_cosmetology_form_view">
			<field name="name">service.cosmetology.form</field>

			<field name="model">openhealth.service.cosmetology</field>

			<field name="inherit_id" ref="service_form_view"/>
	        <field name="mode">primary</field>
			
			
			<field name="arch" type="xml">				



				<!-- <xpath expr="//field[@name='title']" position="before"> -->
				<xpath expr="//h1" position="replace">

					<h1>Cosmiatría</h1>					
        		
        		</xpath>



				<xpath expr="//field[@name='laser']" position="replace"> 
					
					<field name="family"	invisible="1"	/>
<!--
					<field name="vspace"/>
					<field name="service"/>
-->

				</xpath>



				<xpath expr="//field[@name='patient']" position="replace"> 
				</xpath>




			</field>
		</record>		




		<!-- Tree -->
		<record model="ir.ui.view" id="service_cosmetology_tree_view">
			<field name="name">service.cosmetology.tree</field>
			<field name="model">openhealth.service.cosmetology</field>
			<field name="arch" type="xml">
				<tree string="Service Tree">
					
					<field name="name"/>

					<field name="laser"/>				
					
					<field name="service"/>

					<field name="treatment"/>
<!--					
					<field name="id"/>
					<field name="cosmetology"/>
					<field name="consultation"/>
-->
				</tree>
			</field>
		</record>






		<!-- Service Cosmetology - Form Action --> 
		<record model="ir.actions.act_window" id="service_cosmetology_form_action">
			<field name="name">Servicios Cosmiatría</field>
			<field name="res_model">openhealth.service.cosmetology</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			
			<!--
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first consultation
				</p>
			</field>
			-->
		</record>


		<!-- Service Cosmetology - Action -->
		<record model="ir.actions.act_window" id="service_cosmetology_list_action">
			<field name="name">Servicios cosmetology - 2</field>
			<field name="res_model">openhealth.service.cosmetology</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>

			<field name="context">{
									'default_family': 'cosmetology',
                    			}
			</field>
		</record>





	</data>
</openerp>
