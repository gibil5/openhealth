<?xml version="1.0"?>
<openerp>
    <data>



<!-- FORM --> 
        <record model="ir.ui.view" id="service_product_form_view">
            <field name="name">service.product.form</field>
            <field name="model">openhealth.service.product</field>            
            <field name="inherit_id" ref="service_form_view"/>
            <field name="mode">primary</field>

            <field name="priority" eval="100"/>

            <field name="arch" type="xml">      


                <!-- Xpaths --> 
                <xpath expr="//h1" position="replace">

                    <h1>
                        Productos
                    </h1>                   
                
                </xpath>

                <xpath expr="//field[@name='laser']" position="replace">
                </xpath>

                <xpath expr="//field[@name='x_treatment']" position="replace">
                </xpath>

                <xpath expr="//field[@name='zone']" position="replace">
                </xpath>

                <xpath expr="//field[@name='pathology']" position="replace">
                </xpath>

                <xpath expr="//field[@name='service']" position="replace">
                        <field name="service"   string="Producto"   />
                </xpath>

                <xpath expr="//field[@name='price_vip']" position="replace">
                </xpath>

            </field>                        
        </record>       



        <!-- TREE -->
        <record model="ir.ui.view" id="service_product_tree_view">
            <field name="name">service.product.tree</field>            
            <field name="model">openhealth.service.product</field>
            <field name="inherit_id" ref="service_tree_view"/>
            <field name="mode">primary</field>          
            
            <field name="priority" eval="100"/>


            <field name="arch" type="xml">

                <xpath expr="//field[@name='zone']" position="replace">
                </xpath>

                <xpath expr="//field[@name='pathology']" position="replace">
                </xpath>

            </field>
        </record>




        <!-- Filter --> 
        <record id="view_service_product_filter" model="ir.ui.view">
           <field name="name">Service product Search</field>
           <field name="model">openhealth.service.product</field>          
           <field name="arch" type="xml">
               <search string="service.product">
                   <field name="treatment" />
               </search>
           </field>
       </record>

    </data>
</openerp>
