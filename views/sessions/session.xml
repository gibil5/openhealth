                    <field name="evaluation_nr"/>

                    <field name="product"/>
                    <field name="procedure"/>
                    <field name="owner"/>

                    <field name="treatment_id"/>
                    <field name="duration"/>
                    <field name="nr_services"/>
                    <field name="price_total"/>
-->
        
 
    </data>
</openerp>


