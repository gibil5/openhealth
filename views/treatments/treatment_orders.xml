<?xml version="1.0"?>
<openerp>
    <data>



<!-- FORM --> 
        <!-- Orders-->
        <record model="ir.ui.view" id="treatment_quotation_form_view">
            <field name="name">treatment.quotation.form</field>
            <field name="model">openhealth.treatment</field>

            <field name="priority" eval="-20"/>
            
            <field name="inherit_id" ref="treatment_form_view"/>
            <field name="arch" type="xml">


                <notebook>
                    <page string="Caja">

                        <field name="order_ids">

                            <tree string="Orders" create="false"  

colors="
red:state=='draft';
green:state=='sent';
blue:state=='sale';
grey:state in ('cancel')
">                                       

                                <!-- Hot Button -->
                                <button 
                                    name="open_line_current" 
                                    type="object" 
                                    class="oe_highlight"    

                                    string="Entrar"
                                />

                                <field name="date_order"/>
                                <field name="patient"/>
                                <field  name="x_doctor"/>
                                <field name="state"/>
            

                                <field name="nr_lines"/>
                                <field name="pl_product"    string="Producto"/>
                                <field name="pl_family"/>


                                <field name="amount_total"/>
                                <field name="x_procedure_created"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
<!--
                                <field  name="name" string="Presupuesto #"/>
                                <field  name="pricelist_id"/>
                                <field  name="partner_id"/>
                                <field name="x_product"/>
                                <field name="amount_total"  groups="openhealth.roots,openhealth.directors,openhealth.managers"/>

                                <field name="x_target"/>
                                <field name="x_family"/>
-->

            </field>
        </record>
    </data>
</openerp>
