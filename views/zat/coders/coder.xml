<?xml version="1.0"?>
<openerp>
    <data>



<!-- TREE --> 
        <record model="ir.ui.view" id="coder_view_tree">
            <field name="name">openhealth.coder.tree</field>
            <field name="model">openhealth.coder</field>
            <field name="arch" type="xml">
                <tree string="Coder Tree">

                    <field name="name"/>

                    <field name="code"/>


                    <field name="product"/>


                    <field name="x_type"/>
                </tree>
            </field>
        </record>



<!-- ACTION - Coder -->
        <record model="ir.actions.act_window" id="coder_list_action">
            <field name="name">Coder</field>
            <field name="res_model">openhealth.coder</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>

            <!--
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    This is my first Help !
                </p>
            </field>
            -->
        </record>


        <!-- Coder - Product -->
        <record model="ir.actions.act_window" id="coder_product_list_action">
            <field name="name">Coder</field>
            <field name="res_model">openhealth.coder</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>

            <field name="domain">[
                                    ('x_type', 'in', ['product']),
                                ]
            </field>

            <!--
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    This is my first Help !
                </p>
            </field>
            -->
        </record>


        <!-- Coder - Service -->
        <record model="ir.actions.act_window" id="coder_service_list_action">
            <field name="name">Coder</field>
            <field name="res_model">openhealth.coder</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>

            <field name="domain">[
                                    ('x_type', 'in', ['service']),
                                ]
            </field>

            <!--
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    This is my first Help !
                </p>
            </field>
            -->
        </record>






<!-- Coder -->
        <menuitem   id="openhealth_menu"

                    parent="main_electronic_menu"

                    sequence="1"

                    name="Coder"
                />




<!-- Dev -->

        <!-- Coder - Product --> 
        <menuitem id="coder_product_menu" name="Product" parent="openhealth_menu"

                action="coder_product_list_action"
            />


        <!-- Coder - Service --> 
        <menuitem id="coder_service_menu" name="Service" parent="openhealth_menu"

                action="coder_service_list_action"

            />


        <!-- Coder - All --> 
        <menuitem id="coder_all_menu" name="All" parent="openhealth_menu"

                action="coder_list_action"

            />



        <!-- Coder -->
        <menuitem   id="oh_coder_menu"
                    parent="main_openhealth_menu"
                    sequence="1"
                    name="Coder"
                />

        <!-- Coder - All --> 
        <menuitem   id="oh_coder_all_menu" 
                    name="All" 
                    parent="oh_coder_menu"
                    action="coder_list_action"
            />



    </data>
</openerp>
